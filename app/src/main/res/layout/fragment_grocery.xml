<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main_gradient"
    android:padding="16dp"
    tools:context=".GroceryFragment">

    <!-- Header -->
    <TextView
        android:id="@+id/tvGroceryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grocery List"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="16dp" />

    <!-- Scrollable list container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/groceryContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_message_container" />
    </ScrollView>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginVertical="8dp" />

    <!-- Add item section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/etGroceryItem"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Add grocery item..."
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:textColor="#212121"
            android:textColorHint="#757575"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btnAddGrocery"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_send"
            android:contentDescription="Add grocery"
            android:padding="10dp" />
    </LinearLayout>

</LinearLayout>
