<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true"
    tools:context=".MealFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Weekly Plan"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="12dp" />

        <!-- Message if no plan yet -->
        <TextView
            android:id="@+id/tvEmptyPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No plan yet! Chat with AI Planner to generate one."
            android:textColor="#777"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Meal plan container -->
        <LinearLayout
            android:id="@+id/mealContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="8dp" />

        <!-- Chat button -->
        <Button
            android:id="@+id/btnRegeneratePlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat with AI Planner"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
